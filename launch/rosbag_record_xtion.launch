<launch>
  <arg name="topics"
       value="/tf
              /joint_states
              /rhsensor
              /lhsensor
              /camera_remote/rgb/image_rect_color/compressed
              /camera_remote/rgb/camera_info
              /camera_remote/depth_registered/camera_info
              /camera_remote/depth_registered/image_raw" />
  <arg name="save_dir" value="$(optenv HOME)/.ros/otsubo/pr2_open_b2_door_demo" />

  <param name="mk_save_dir" command="mkdir -p $(arg save_dir)" />
  <node name="rosbag_record"
        pkg="rosbag"
        type="record"
        args="-O $(arg save_dir)/otsubo_xtion.bag $(arg topics)" />

  <!--
  <include file="$(find jsk_data)/launch/common_record.launch">
